<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/btn_item_er"
    android:padding="10dp">
    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_str"/>
	<TextView android:layout_width="90dp"
	    android:layout_height="wrap_content"
	    android:text="天河客运站"
	    android:textColor="#111"
	    android:layout_gravity="center_vertical"
	    android:id="@+id/str_id"/>
	<ImageView android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:src="@drawable/jian_tou"
	    android:layout_gravity="center_vertical"
	    android:layout_marginLeft="20dp"/>
	<ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_end"
        android:layout_marginLeft="40dp"/>
	<TextView android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="体育西路"
	    android:textColor="#111"
	    android:id="@+id/end_id"
	    android:layout_gravity="center_vertical"/>
</LinearLayout>
